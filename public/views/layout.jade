doctype html
html
  head
    title GDA DB
  body(ng-controller='appCtrl')
    header
      div.container-fluid
          div.col-sm-10.col-sm-offset-1
            div.row-fluid
              div.col-sm-12.gdadb-background
                div.row-fluid
                  div.col-sm-2.gdadb-logo.gdadb-header
                    div.gdadb-logo(onclick="window.location='/'")
                  div.col-sm-8.gdadb-controls.gdadb-header
                    form(name='playSearch', action='/search')
                      div.row.gdadb-buttons
                        div.col-sm-8.gdadb-control-wrapper
                          input.form-control.gdadb-search-box(type='text',name='search', id='search', placeholder='Find plays, cast, crew, and more...', ng-model='formData.search')
                        div.col-sm-2.gdadb-control-wrapper
                          select.form-control(name='type', id='type',ng-model='formData.type')
                            option(id='All', value='All') All
                        div.col-sm-2.gdadb-control-wrapper
                          button.form-control.btn.btn-primary.btn-sm(style="margin-bottom:10px; ", type='submit', ng-click='submitted=true') Search
                      div.row.gdadb-menu-row
                        div.col-sm-3
                          span.menulink(onclick='window.location="/add"') Plays
                        div.col-sm-3
                          span.menulink(onclick='window.location="/castcrew"') Cast and Crew
                        div.col-sm-3
                          span.menulink(onclick='window.location="/news"') News
                        div.col-sm-3
                          if auth
                            span.menulink(onclick="window.location='/signout'") Sign Out
                          else
                            span.menulink(onclick='window.location="/signin"') Sign In
                  div.col-sm-2.gdadb-social-media.gdadb-header
                    | Social Media
             div.row-fluid.gdadb-content 
               block content
    footer
      include scripts
      block scripts
